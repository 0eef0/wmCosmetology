<script>
  const modalDOM  = document.querySelector('.modal-container');
  let isModalVisible = false;

  const showModal = () => {
    modalDOM.style.display = 'grid';
    modalDOM.style.visibility = 'visible';  
    isModalVisible = true;  
  }
  const hideModal = () => {
    modalDOM.style.display = 'none';
    modalDOM.style.visibility = 'hidden';  
    isModalVisible = false;  
  }

  document.addEventListener('keydown', (e) => {
    if((e.key === "Escape" || e.key === "Esc") && isModalVisible){
      hideModal();
	  }
  })
</script>